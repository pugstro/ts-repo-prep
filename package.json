{
  "name": "mcp-repo-intelligence",
  "version": "2.1.0",
  "description": "AI-powered repository intelligence server for code analysis via Model Context Protocol",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "repo-intelligence": "./dist/cli.js",
    "mcp-repo-intelligence": "./dist/mcp/server.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./mcp": "./dist/mcp/server.js",
    "./cli": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "mcp": "tsx src/mcp/server.ts",
    "start": "node dist/cli.js",
    "start-mcp": "node dist/mcp/server.js",
    "lint": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "typescript",
    "cli",
    "repo",
    "summarizer",
    "LLM",
    "AI"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@swc/core": "^1.15.8",
    "@swc/helpers": "^0.5.18",
    "@types/node": "^25.0.8",
    "better-sqlite3": "^12.6.0",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "fast-glob": "^3.3.3",
    "ignore": "^7.0.5",
    "p-limit": "^7.2.0",
    "pino": "^10.1.1",
    "pino-pretty": "^13.1.3",
    "ts-morph": "^27.0.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "tsx": "^4.21.0"
  }
}